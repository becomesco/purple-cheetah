{
  "name": "@becomes/purple-cheetah",
  "version": "3.0.0",
  "description": "Purple Cheetah is not a framework but rather a utility set for ExpressJS, written in Typescript.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "bundle": "node tools.js --bundle",
    "publish": "node tools.js --publish",
    "link": "node tools.js --link",
    "link:sudo": "node tools.js --link --sudo",
    "unlink": "node tools.js --unlink",
    "unlink:sudo": "node tools.js --unlink --sudo",
    "pack": "node tools.js --pack",
    "typedoc": "typedoc",
    "test": "env-cmd mocha -r ts-node/register test/integration/*.test.ts --recursive --exit",
    "test:active": "env-cmd mocha -r ts-node/register test/integration/*.active.test.ts --recursive --exit --bail",
    "test:unit": "env-cmd mocha -r ts-node/register test/unit/*.test.ts --recursive --exit",
    "test:active:unit": "env-cmd mocha -r ts-node/register test/unit/*.active.test.ts --recursive --exit",
    "lint": "eslint . --ext .ts",
    "example:hello-world": "nodemon examples/hello-world/main.ts",
    "example:todo-fsdb": "nodemon examples/todo-fsdb/main.ts",
    "example:todo-mongodb": "env-cmd nodemon examples/todo-mongodb/main.ts",
    "example:graphql": "env-cmd nodemon examples/graphql/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/purple-cheetah.git"
  },
  "keywords": [],
  "author": "Branislav VajagiÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/becomesco/purple-cheetah/issues"
  },
  "homepage": "https://purple-cheetah.dev",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.0",
    "http-proxy-middleware": "^2.0.0",
    "mongoose": "^5.12.12",
    "socket.io": "^4.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.12",
    "@types/fs-extra": "^9.0.11",
    "@types/graphql": "^14.5.0",
    "@types/mocha": "^8.2.2",
    "@types/mongoose": "^5.11.26",
    "@types/node": "^15.6.2",
    "@types/socket.io-client": "^1.4.34",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.4",
    "env-cmd": "^10.1.0",
    "eslint": "^7.27.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typedoc-neo-theme": "^1.1.0",
    "typescript": "^4.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "examples",
      "src",
      "test"
    ],
    "ext": "ts"
  }
}
